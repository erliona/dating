# Dating App Environment Configuration
# Copy this file to .env and update values

# ==================== CORE CONFIGURATION ====================
ENVIRONMENT=development
DOMAIN=localhost
LOG_LEVEL=INFO

# ==================== DATABASE ====================
POSTGRES_DB=dating
POSTGRES_USER=dating
POSTGRES_PASSWORD=dating
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==================== TELEGRAM BOT ====================
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz-1234567
WEBAPP_URL=https://dating.serge.cc
TELEGRAM_BOT_SECRET_TOKEN=your_telegram_bot_secret_token_here

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== ADMIN PANEL ====================
ADMIN_PASSWORD=admin123

# ==================== MINIO S3 STORAGE ====================
MINIO_ROOT_USER=dating
MINIO_ROOT_PASSWORD=dating123
MINIO_ENDPOINT=http://minio:9000

# ==================== SERVICE PORTS ====================
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
PROFILE_SERVICE_PORT=8082
DISCOVERY_SERVICE_PORT=8083
MEDIA_SERVICE_PORT=8084
CHAT_SERVICE_PORT=8085
ADMIN_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
DATA_SERVICE_PORT=8088

# ==================== MIGRATIONS ====================
RUN_DB_MIGRATIONS=true

# ==================== MONITORING ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOKI_PORT=3100

# ==================== RATE LIMITING ====================
AUTH_RATE_LIMIT=10
GENERAL_RATE_LIMIT=50
MEDIA_RATE_LIMIT=20

# ==================== SECURITY ====================
# Generate with: python3 scripts/generate-telegram-secret.py
TELEGRAM_BOT_SECRET_TOKEN=your_generated_secret_here

# ==================== DEVELOPMENT ====================
# Set to true for development mode
DEBUG=false
HOT_RELOAD=false
