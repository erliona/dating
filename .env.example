# Dating App Environment Variables
# Copy this file to .env and fill in your values

# Domain Configuration
DOMAIN=localhost
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8091

# Database Configuration
POSTGRES_DB=dating
POSTGRES_USER=dating
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://dating:your_secure_password_here@db:5432/dating

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_32_chars_minimum

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
WEBAPP_URL=https://your-domain.com

# Service Ports (internal only, no external exposure)
AUTH_SERVICE_PORT=8081
PROFILE_SERVICE_PORT=8082
DISCOVERY_SERVICE_PORT=8083
MEDIA_SERVICE_PORT=8084
CHAT_SERVICE_PORT=8085
ADMIN_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
DATA_SERVICE_PORT=8088
GATEWAY_PORT=8080

# Service URLs (internal Docker network)
AUTH_SERVICE_URL=http://auth-service:8081
PROFILE_SERVICE_URL=http://profile-service:8082
DISCOVERY_SERVICE_URL=http://discovery-service:8083
MEDIA_SERVICE_URL=http://media-service:8084
CHAT_SERVICE_URL=http://chat-service:8085
ADMIN_SERVICE_URL=http://admin-service:8086
NOTIFICATION_SERVICE_URL=http://notification-service:8087
DATA_SERVICE_URL=http://data-service:8088

# RabbitMQ Configuration
RABBITMQ_USER=dating
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_URL=amqp://dating:your_rabbitmq_password_here@rabbitmq:5672/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Admin Panel
ADMIN_PASSWORD=your_admin_password_here

# Database Migration Control
RUN_DB_MIGRATIONS=true

# Media Configuration
NSFW_THRESHOLD=0.7
PHOTO_STORAGE_PATH=/app/photos

# Monitoring (Production only)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
LOKI_PORT=3100
CADVISOR_PORT=8090
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187

# SSL/TLS
ACME_EMAIL=admin@your-domain.com

# Environment
ENVIRONMENT=development

# MinIO S3 Storage
MINIO_ROOT_USER=dating
MINIO_ROOT_PASSWORD=your_minio_password_here
