# Environment Configuration
# Copy this file to .env and update values for your environment

# Environment (development|production)
ENVIRONMENT=development

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
WEBAPP_URL=http://localhost:3000

# Database Configuration
POSTGRES_DB=dating
POSTGRES_USER=dating
POSTGRES_PASSWORD=strong_password_here
RUN_DB_MIGRATIONS=false

# JWT & Security
JWT_SECRET=generate_with_python_secrets
ADMIN_PASSWORD=strong_admin_password_here

# Services Configuration
AUTH_SERVICE_PORT=8081
PROFILE_SERVICE_PORT=8082
DISCOVERY_SERVICE_PORT=8083
MEDIA_SERVICE_PORT=8084
CHAT_SERVICE_PORT=8085
ADMIN_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
DATA_SERVICE_PORT=8088
GATEWAY_PORT=8080

# Domain Configuration
DOMAIN=localhost
ACME_EMAIL=admin@example.com

# Ports (development only)
HTTP_PORT=80
HTTPS_PORT=443
POSTGRES_EXTERNAL_PORT=5433

# Monitoring (production only)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin
LOKI_PORT=3100

# Traefik Configuration
TRAEFIK_DASHBOARD_PORT=8091

# Redis Configuration (if needed)
REDIS_URL=redis://redis:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://dating:dating@rabbitmq:5672/
RABBITMQ_USER=dating
RABBITMQ_PASSWORD=dating
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Media Service
NSFW_THRESHOLD=0.7

# Monitoring (production only)
POSTGRES_EXPORTER_PORT=9187

# Service URLs (API Gateway)
BOT_URL=http://telegram-bot:8080
AUTH_SERVICE_URL=http://auth-service:8081
PROFILE_SERVICE_URL=http://profile-service:8082
DISCOVERY_SERVICE_URL=http://discovery-service:8083
MEDIA_SERVICE_URL=http://media-service:8084
CHAT_SERVICE_URL=http://chat-service:8085
ADMIN_SERVICE_URL=http://admin-service:8086
NOTIFICATION_SERVICE_URL=http://notification-service:8087
WEBAPP_DOMAIN=https://localhost

# Development specific
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
