{
  "title": "API Performance Dashboard",
  "tags": ["api", "performance", "http"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "refId": "A",
          "legendFormat": "{{service}} - {{method}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Response Time by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(request_duration_seconds_bucket[5m]))",
          "refId": "A",
          "legendFormat": "95th percentile - {{service}}"
        },
        {
          "expr": "histogram_quantile(0.50, rate(request_duration_seconds_bucket[5m]))",
          "refId": "B",
          "legendFormat": "50th percentile - {{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "HTTP Status Codes",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"2..\"}[5m])",
          "refId": "A",
          "legendFormat": "2xx - {{service}}"
        },
        {
          "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
          "refId": "B",
          "legendFormat": "4xx - {{service}}"
        },
        {
          "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
          "refId": "C",
          "legendFormat": "5xx - {{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Error Rate by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
          "refId": "A",
          "legendFormat": "Error Rate % - {{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Active Requests by Service",
      "type": "gauge",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "active_requests",
          "refId": "A",
          "legendFormat": "{{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "Top Endpoints by Requests",
      "type": "table",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "topk(10, rate(http_requests_total[5m]))",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 8,
        "y": 16
      }
    }
  ]
}
