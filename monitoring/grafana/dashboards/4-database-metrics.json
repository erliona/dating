{
  "title": "Database Metrics",
  "tags": ["database", "postgresql", "performance"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Database Status",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_up",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {"text": "Down", "color": "red"},
                "1": {"text": "Up", "color": "green"}
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      "gridPos": {"x": 0, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 2,
      "title": "Active Connections",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 80, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 4, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 3,
      "title": "Database Size",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"dating\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1000000000, "color": "yellow"},
              {"value": 5000000000, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 8, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 4,
      "title": "Total Tables",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "count(pg_stat_user_tables_n_tup_ins)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"}
            ]
          }
        }
      },
      "gridPos": {"x": 12, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 5,
      "title": "Queries Per Second",
      "type": "gauge",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"dating\"}[5m]) + rate(pg_stat_database_xact_rollback{datname=\"dating\"}[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "qps",
          "min": 0,
          "max": 1000,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 500, "color": "yellow"},
              {"value": 800, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 16, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 6,
      "title": "Cache Hit Rate",
      "type": "gauge",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 * (sum(pg_stat_database_blks_hit{datname=\"dating\"}) / (sum(pg_stat_database_blks_hit{datname=\"dating\"}) + sum(pg_stat_database_blks_read{datname=\"dating\"})))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      },
      "gridPos": {"x": 20, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 7,
      "title": "Database Connections Over Time",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Active Connections",
          "refId": "A"
        },
        {
          "expr": "pg_settings_max_connections",
          "legendFormat": "Max Connections",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8}
    },
    {
      "id": 8,
      "title": "Transaction Rate",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"dating\"}[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"dating\"}[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8}
    },
    {
      "id": 9,
      "title": "Database I/O",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_read{datname=\"dating\"}[5m])",
          "legendFormat": "Blocks Read (Disk)",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_blks_hit{datname=\"dating\"}[5m])",
          "legendFormat": "Blocks Hit (Cache)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "blocks/s",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8}
    },
    {
      "id": 10,
      "title": "Table Operations",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_user_tables_n_tup_ins[5m]))",
          "legendFormat": "Inserts",
          "refId": "A"
        },
        {
          "expr": "sum(rate(pg_stat_user_tables_n_tup_upd[5m]))",
          "legendFormat": "Updates",
          "refId": "B"
        },
        {
          "expr": "sum(rate(pg_stat_user_tables_n_tup_del[5m]))",
          "legendFormat": "Deletes",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8}
    },
    {
      "id": 11,
      "title": "Deadlocks",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "increase(pg_stat_database_deadlocks{datname=\"dating\"}[1h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 0, "y": 20, "w": 6, "h": 4}
    },
    {
      "id": 12,
      "title": "Slow Queries",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_max_tx_duration",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 6, "y": 20, "w": 6, "h": 4}
    },
    {
      "id": 13,
      "title": "Database Age",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"dating\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"}
            ]
          }
        }
      },
      "gridPos": {"x": 12, "y": 20, "w": 6, "h": 4}
    },
    {
      "id": 14,
      "title": "Temporary Files",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "increase(pg_stat_database_temp_files{datname=\"dating\"}[1h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 18, "y": 20, "w": 6, "h": 4}
    }
  ],
  "schemaVersion": 27,
  "version": 1,
  "uid": "database-metrics",
  "id": null
}
