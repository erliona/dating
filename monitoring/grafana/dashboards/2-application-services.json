      "gridPos": {"x": 20, "y": 0, "w": 4, "h": 4}
    },
    {
      "id": 7,
      "title": "Service CPU Usage",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{name=~\".*-(gateway|auth|profile|discovery|media|chat)-.*\"}[5m]) * 100)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max"]
        }
      },
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8}
    },
    {
      "id": 8,
      "title": "Service Memory Usage",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (name) (container_memory_usage_bytes{name=~\".*-(gateway|auth|profile|discovery|media|chat)-.*\"})",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max"]
        }
      },
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8}
    },
    {
      "id": 9,
      "title": "Container Restarts",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(increase(container_start_time_seconds{name=~\".*-(gateway|auth|profile|discovery|media|chat|bot)-.*\"}[1h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 3, "color": "red"}
            ]
          }
        }
      },
      "gridPos": {"x": 0, "y": 12, "w": 6, "h": 4}
    },
    {
      "id": 10,
      "title": "Bot Container Status",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "count(container_last_seen{name=~\".*-bot-.*\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {"text": "Down", "color": "red"},
                "1": {"text": "Running", "color": "green"}
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      "gridPos": {"x": 6, "y": 12, "w": 6, "h": 4}
    },
    {
      "id": 11,
      "title": "Service Network I/O",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{name=~\".*-(gateway|auth|profile|discovery|media|chat)-.*\"}[5m]))",
          "legendFormat": "{{name}} - RX",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{name=~\".*-(gateway|auth|profile|discovery|media|chat)-.*\"}[5m]))",
          "legendFormat": "{{name}} - TX",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["mean"]
        }
      },
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8}
    }
  ],
  "schemaVersion": 27,
  "version": 1,
  "uid": "application-services",
  "id": null
